  pod 'Fabric', '~> 1.10.2'
  pod 'Crashlytics', '~> 3.14.0'

  target 'NeriTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'NeriUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end

target 'Neri WatchKit App' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Neri WatchKit App

end
